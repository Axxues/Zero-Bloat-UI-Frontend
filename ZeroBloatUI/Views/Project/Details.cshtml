@{
    ViewData["Title"] = "Templates";
}

<div class="text-[10px] md:text-xs text-slate-500 mb-6 flex items-center gap-2 animate-fade-in-up">
    <a asp-controller="Project" asp-action="Index" class="hover:text-blue-500">Templates</a> <i class="fas fa-chevron-right text-[8px]"></i>
    <span class="text-slate-400">AdminPro v2</span>
</div>

<div class="grid lg:grid-cols-3 gap-8 md:gap-10 animate-fade-in-up" style="animation-delay: 100ms;">

    <div class="lg:col-span-2">
        <div class="glass rounded-3xl p-2 mb-8">
            <div class="rounded-2xl overflow-hidden aspect-video bg-black relative group flex items-center justify-center text-slate-500">
                <i class="fab fa-youtube text-5xl opacity-50 group-hover:opacity-100 transition-opacity cursor-pointer text-red-600"></i>
            </div>
        </div>

        <div class="mb-8">
            <h1 class="text-2xl md:text-3xl font-extrabold mb-4 leading-tight">AdminPro v2 - Analytics Dashboard Kit</h1>
            <div class="flex flex-wrap gap-2 mb-6">
                <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-xs font-bold rounded-full">Tailwind CSS v3.4</span>
                <span class="px-3 py-1 bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 text-xs font-bold rounded-full">HTML5</span>
                <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400 text-xs font-bold rounded-full">Alpine.js Ready <i class="fas fa-check-circle ml-1"></i></span>
            </div>
        </div>

        <div class="border-b border-slate-200 dark:border-slate-700 mb-6 overflow-x-auto">
            <div class="flex gap-8 min-w-max">
                <button class="pb-3 border-b-2 border-blue-500 font-bold text-blue-500">Overview</button>
                <button class="pb-3 border-b-2 border-transparent text-slate-500 hover:text-slate-300 transition">File Structure</button>
                <button class="pb-3 border-b-2 border-transparent text-slate-500 hover:text-slate-300 transition">Reviews (24)</button>
            </div>
        </div>

        <div class="prose dark:prose-invert max-w-none text-slate-600 dark:text-slate-300 mb-10 text-sm md:text-base">
            <p>The ultimate admin dashboard template for data-heavy applications. Built with semantic HTML and Tailwind CSS, keeping the codebase clean and bloat-free.</p>
            <h4 class="font-bold text-lg mt-4 mb-2 text-slate-900 dark:text-white">Included Pages:</h4>
            <ul class="list-disc pl-5 space-y-1">
                <li><strong>Dashboard Analytics:</strong> Charts, Graphs, and KPIs.</li>
                <li><strong>E-Commerce:</strong> Product List, Add Product, Orders, Invoice.</li>
                <li><strong>Authentication:</strong> Login, Register, Forgot Password, Lock Screen.</li>
            </ul>
        </div>

        <div class="mb-10">
            <h3 class="font-bold text-lg mb-4">File Structure</h3>
            <div class="glass rounded-xl p-4 font-mono text-sm text-slate-600 dark:text-slate-400 border-l-4 border-blue-500 overflow-x-auto max-h-80 overflow-y-auto custom-scrollbar">
                <div class="min-w-[300px] space-y-1">
                    <div class="flex items-center gap-2 text-slate-900 dark:text-slate-200 font-bold"><i class="fas fa-folder-open text-blue-500"></i> admin-pro-v2</div>

                    <div class="ml-4">
                        <div class="flex items-center gap-2"><i class="fas fa-folder text-blue-400"></i> src</div>
                        <div class="ml-4 border-l border-slate-300 dark:border-slate-700 pl-3">
                            <div class="flex items-center gap-2"><i class="fas fa-folder text-blue-400"></i> css</div>
                            <div class="ml-4 border-l border-slate-300 dark:border-slate-700 pl-3">
                                <div class="flex items-center gap-2 text-blue-500"><i class="fab fa-css3"></i> tailwind.css</div>
                                <div class="flex items-center gap-2 text-blue-500"><i class="fab fa-css3"></i> custom.css</div>
                            </div>
                            <div class="flex items-center gap-2"><i class="fas fa-folder text-blue-400"></i> pages</div>
                            <div class="ml-4 border-l border-slate-300 dark:border-slate-700 pl-3">
                                <div class="flex items-center gap-2 text-orange-500"><i class="fab fa-html5"></i> dashboard.html</div>
                                <div class="flex items-center gap-2 text-orange-500"><i class="fab fa-html5"></i> analytics.html</div>
                                <div class="flex items-center gap-2 text-orange-500"><i class="fab fa-html5"></i> settings.html</div>
                            </div>
                        </div>
                    </div>

                    <div class="ml-4 flex items-center gap-2 text-red-400"><i class="fas fa-cog"></i> package.json</div>
                    <div class="ml-4 flex items-center gap-2 text-slate-500"><i class="fas fa-file"></i> README.md</div>
                </div>
            </div>
        </div>

        <div class="mt-10 animate-fade-in-up" style="animation-delay: 200ms;">
            <div class="flex items-end justify-between mb-6">
                <div>
                    <h3 class="font-bold text-lg">Reviews <span class="text-slate-500 text-sm font-normal">(24)</span></h3>
                    <div class="flex items-center gap-1 text-yellow-400 text-sm mt-1">
                        <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                        <span class="text-slate-900 dark:text-white font-bold ml-1">5.0</span>
                    </div>
                </div>
            </div>

            <div class="space-y-4">
                <div class="glass p-5 rounded-xl hover:scale-[1.02] hover:shadow-xl transition-all duration-300 group cursor-default">
                    <div class="flex justify-between items-start mb-3">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-gradient-to-tr from-blue-500 to-purple-500 flex items-center justify-center text-white font-bold text-xs shadow-md">MD</div>
                            <div>
                                <h4 class="font-bold text-sm group-hover:text-blue-500 transition-colors">Marcus D.</h4>
                                <p class="text-[10px] text-slate-500">Frontend Dev • Feb 2026</p>
                            </div>
                        </div>
                        <div class="text-yellow-400 text-xs"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></div>
                    </div>
                    <p class="text-sm text-slate-600 dark:text-slate-300 leading-relaxed mb-4">
                        "The cleanest HTML code I've seen in a template. Saved me about 2 weeks of work on my SaaS project."
                    </p>
                    <button onclick="toggleLike(this)" class="flex items-center gap-2 text-xs font-bold text-slate-400 hover:text-red-500 transition-colors group/btn">
                        <i class="far fa-heart group-hover/btn:scale-125 transition-transform duration-200"></i> <span>Helpful?</span>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="lg:col-span-1">
        <div class="glass rounded-3xl p-6 lg:sticky lg:top-28 shadow-2xl shadow-blue-900/10 border border-blue-500/30">
            <div class="text-5xl font-extrabold text-slate-900 dark:text-white mb-6">$49<span class="text-lg text-slate-500 font-normal">.00</span></div>

            <a href="#" class="w-full py-4 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 text-white font-bold rounded-xl shadow-lg transform active:scale-95 transition-all mb-4 flex items-center justify-center gap-2">
                Get License <i class="fas fa-arrow-right"></i>
            </a>

            <div class="text-center text-xs text-slate-500 mb-6">
                <p class="mb-2">Secure Payment via Lemon Squeezy</p>
                <div class="flex justify-center gap-3 text-2xl text-slate-400">
                    <i class="fas fa-wallet hover:text-blue-500 transition-colors"></i>
                    <i class="fab fa-cc-mastercard hover:text-orange-500 transition-colors"></i>
                    <i class="fab fa-cc-visa hover:text-blue-700 transition-colors"></i>
                </div>
            </div>

            <div class="border-t border-slate-200 dark:border-slate-700 pt-6">
                <div class="flex items-center gap-3 mb-4">
                    <div class="w-10 h-10 rounded-full bg-slate-200 dark:bg-slate-700 flex items-center justify-center text-blue-600"><i class="fas fa-layer-group"></i></div>
                    <div>
                        <p class="text-xs text-slate-500">License Type</p>
                        <p class="font-bold text-sm">Commercial Standard <i class="fas fa-check-circle text-blue-500 text-xs"></i></p>
                    </div>
                </div>
                <ul class="space-y-2 text-xs text-slate-500">
                    <li>• Use for Personal or Commercial projects</li>
                    <li>• Unlimited Projects</li>
                    <li>• Free Updates</li>
                </ul>
            </div>
        </div>
    </div>

</div>