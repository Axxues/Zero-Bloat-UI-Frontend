@{
    ViewData["Title"] = "Templates";
}

<div class="flex flex-col lg:flex-row gap-8">

    <aside class="w-full lg:w-1/4 h-fit lg:sticky lg:top-28 z-20">
        <div class="glass rounded-2xl animate-fade-in-up overflow-hidden">
            <button onclick="toggleFilters()" class="w-full p-4 md:p-6 flex justify-between items-center lg:hidden bg-slate-50/50 dark:bg-slate-900/50">
                <h3 class="font-bold text-lg"><i class="fas fa-filter mr-2 text-blue-500"></i> Filters</h3>
                <i id="filterArrow" class="fas fa-chevron-down transition-transform duration-300"></i>
            </button>

            <div id="filterContent" class="hidden lg:block p-4 md:p-6 pt-0 lg:pt-6 border-t border-slate-200 dark:border-slate-700 lg:border-none">
                <div class="hidden lg:flex justify-between items-center mb-6">
                    <h3 class="font-bold text-lg">Filters</h3>
                    <button class="text-xs text-blue-500 hover:underline">Reset</button>
                </div>

                <div class="mb-6">
                    <label class="text-xs font-bold text-slate-500 uppercase mb-2 block">Search</label>
                    <div class="relative">
                        <input type="text" placeholder="e.g. Dashboard..." class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-300 dark:border-slate-700 rounded-lg py-2 pl-3 pr-10 text-sm focus:outline-none focus:border-blue-500 transition-colors">
                        <i class="fas fa-search absolute right-3 top-2.5 text-slate-400"></i>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="text-xs font-bold text-slate-500 uppercase mb-3 block">Category</label>
                    <div class="space-y-3">
                        <label class="flex items-center gap-3 cursor-pointer group select-none">
                            <div class="relative">
                                <input type="checkbox" class="peer custom-checkbox sr-only" checked>
                                <div class="h-5 w-5 rounded border border-slate-400 dark:border-slate-600 bg-slate-100 dark:bg-slate-800 transition-all flex items-center justify-center shadow-sm">
                                    <i class="fas fa-check text-white text-[10px] hidden"></i>
                                </div>
                            </div>
                            <span class="text-sm font-medium text-slate-600 dark:text-slate-300 group-hover:text-blue-500 transition-colors">Admin Dashboards</span>
                        </label>
                        <label class="flex items-center gap-3 cursor-pointer group select-none">
                            <div class="relative">
                                <input type="checkbox" class="peer custom-checkbox sr-only">
                                <div class="h-5 w-5 rounded border border-slate-400 dark:border-slate-600 bg-slate-100 dark:bg-slate-800 transition-all flex items-center justify-center shadow-sm">
                                    <i class="fas fa-check text-white text-[10px] hidden"></i>
                                </div>
                            </div>
                            <span class="text-sm font-medium text-slate-600 dark:text-slate-300 group-hover:text-blue-500 transition-colors">Landing Pages</span>
                        </label>
                        <label class="flex items-center gap-3 cursor-pointer group select-none">
                            <div class="relative">
                                <input type="checkbox" class="peer custom-checkbox sr-only">
                                <div class="h-5 w-5 rounded border border-slate-400 dark:border-slate-600 bg-slate-100 dark:bg-slate-800 transition-all flex items-center justify-center shadow-sm">
                                    <i class="fas fa-check text-white text-[10px] hidden"></i>
                                </div>
                            </div>
                            <span class="text-sm font-medium text-slate-600 dark:text-slate-300 group-hover:text-blue-500 transition-colors">E-Commerce Kits</span>
                        </label>
                    </div>
                </div>

                <div class="mb-6">
                    <label class="text-xs font-bold text-slate-500 uppercase mb-3 block">Price</label>
                    <div class="flex items-center gap-3">
                        <div class="relative w-full">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"><span class="text-slate-500 font-bold">$</span></div>
                            <input type="number" placeholder="0" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-300 dark:border-slate-600 text-slate-900 dark:text-white text-sm rounded-lg pl-8 p-2.5 transition-all">
                        </div>
                        <span class="text-slate-400 font-bold">-</span>
                        <div class="relative w-full">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"><span class="text-slate-500 font-bold">$</span></div>
                            <input type="number" placeholder="100" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-300 dark:border-slate-600 text-slate-900 dark:text-white text-sm rounded-lg pl-8 p-2.5 transition-all">
                        </div>
                    </div>
                </div>

                <button class="w-full py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition text-sm shadow-lg shadow-blue-500/30 transform active:scale-95">Update Results</button>
            </div>
        </div>
    </aside>

    <div class="w-full lg:w-3/4">

        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6 animate-fade-in-up relative z-30 gap-4">
            <span class="text-sm text-slate-500">Showing 6 Premium Templates</span>

            <div class="relative w-full sm:w-auto min-w-[200px]">
                <input type="hidden" id="sortValue" value="Newest First">
                <button onclick="toggleSort()" id="sortTrigger" class="glass px-4 py-2 rounded-lg flex items-center justify-between w-full text-sm font-bold text-slate-700 dark:text-slate-200 hover:bg-white dark:hover:bg-slate-800 transition-all border border-slate-200 dark:border-slate-700">
                    <span id="sortText">Newest First</span>
                    <i id="sortArrow" class="fas fa-chevron-down text-xs transition-transform duration-300 text-slate-400"></i>
                </button>
                <div id="sortMenu" class="absolute hidden z-50 w-full mt-2 glass rounded-xl shadow-2xl overflow-hidden transform origin-top transition-all duration-200 ring-1 ring-black ring-opacity-5">
                    <div class="flex flex-col py-1">
                        <div onclick="selectSort(this, 'Newest First')" class="sort-option px-4 py-2 cursor-pointer text-sm transition-colors flex justify-between items-center text-blue-600 font-bold bg-blue-50 dark:bg-slate-800/80">
                            <span>Newest First</span>
                            <i class="fas fa-check text-xs"></i>
                        </div>
                        <div onclick="selectSort(this, 'Price: Low to High')" class="sort-option px-4 py-2 hover:bg-blue-50 dark:hover:bg-slate-800 cursor-pointer text-sm transition-colors flex justify-between items-center text-slate-600 dark:text-slate-300">
                            <span>Price: Low to High</span>
                            <i class="fas fa-check text-xs hidden"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-fade-in-up relative z-0" style="animation-delay: 100ms;">

            <a asp-controller="Project" asp-action="Details" class="glass rounded-2xl overflow-hidden hover:border-blue-500 transition-colors group cursor-pointer h-full flex flex-col hover:shadow-xl hover:shadow-blue-500/10">
                <div class="h-40 bg-slate-800 relative flex items-center justify-center text-slate-700 group-hover:bg-slate-700 transition-colors"><i class="fas fa-chart-line text-4xl"></i></div>
                <div class="p-4 md:p-5 flex flex-col flex-grow">
                    <h3 class="font-bold text-base mb-1 group-hover:text-blue-500 transition-colors line-clamp-1">AdminPro v2</h3>
                    <div class="flex gap-2 my-2">
                        <span class="px-2 py-0.5 bg-blue-100 dark:bg-blue-900/30 text-blue-600 text-[10px] font-bold rounded">Dashboard</span>
                    </div>
                    <div class="mt-auto pt-4 flex justify-between items-center border-t border-slate-200 dark:border-slate-700">
                        <span class="text-xs text-slate-500">HTML + Tailwind</span>
                        <span class="font-bold text-emerald-500">$49</span>
                    </div>
                </div>
            </a>

            <a asp-controller="Project" asp-action="Details" class="glass rounded-2xl overflow-hidden hover:border-blue-500 transition-colors group cursor-pointer h-full flex flex-col hover:shadow-xl hover:shadow-blue-500/10">
                <div class="h-40 bg-slate-800 relative flex items-center justify-center text-slate-700 group-hover:bg-slate-700 transition-colors"><i class="fas fa-rocket text-4xl"></i></div>
                <div class="p-4 md:p-5 flex flex-col flex-grow">
                    <h3 class="font-bold text-base mb-1 group-hover:text-blue-500 transition-colors line-clamp-1">LaunchPad Kit</h3>
                    <div class="flex gap-2 my-2">
                        <span class="px-2 py-0.5 bg-purple-100 dark:bg-purple-900/30 text-purple-600 text-[10px] font-bold rounded">SaaS</span>
                    </div>
                    <div class="mt-auto pt-4 flex justify-between items-center border-t border-slate-200 dark:border-slate-700">
                        <span class="text-xs text-slate-500">HTML + Tailwind</span>
                        <span class="font-bold text-emerald-500">$29</span>
                    </div>
                </div>
            </a>

            <a asp-controller="Project" asp-action="Details" class="glass rounded-2xl overflow-hidden hover:border-blue-500 transition-colors group cursor-pointer h-full flex flex-col hover:shadow-xl hover:shadow-blue-500/10">
                <div class="h-40 bg-slate-800 relative flex items-center justify-center text-slate-700 group-hover:bg-slate-700 transition-colors"><i class="fas fa-shopping-bag text-4xl"></i></div>
                <div class="p-4 md:p-5 flex flex-col flex-grow">
                    <h3 class="font-bold text-base mb-1 group-hover:text-blue-500 transition-colors line-clamp-1">ShopFlow UI</h3>
                    <div class="flex gap-2 my-2">
                        <span class="px-2 py-0.5 bg-green-100 dark:bg-green-900/30 text-green-600 text-[10px] font-bold rounded">E-Commerce</span>
                    </div>
                    <div class="mt-auto pt-4 flex justify-between items-center border-t border-slate-200 dark:border-slate-700">
                        <span class="text-xs text-slate-500">HTML + Tailwind</span>
                        <span class="font-bold text-emerald-500">$39</span>
                    </div>
                </div>
            </a>
        </div>

        <div class="flex justify-center mt-12 animate-fade-in-up" style="animation-delay: 200ms;">
            <nav aria-label="Page navigation">
                <ul class="inline-flex items-center -space-x-px gap-2">
                    <li><a href="#" class="w-10 h-10 flex items-center justify-center rounded-full glass text-slate-500 hover:text-blue-600 dark:hover:text-white hover:scale-110 transition-all duration-300 shadow-sm hover:shadow-blue-500/20"><i class="fas fa-chevron-left"></i></a></li>
                    <li><a href="#" class="w-10 h-10 flex items-center justify-center rounded-full bg-gradient-to-r from-blue-600 to-blue-500 text-white font-bold shadow-lg shadow-blue-500/30 scale-110 transform transition-transform border border-blue-400">1</a></li>
                    <li><a href="#" class="w-10 h-10 flex items-center justify-center rounded-full glass text-slate-600 dark:text-slate-300 hover:bg-white dark:hover:bg-slate-800 hover:scale-110 transition-all duration-300 hover:text-blue-500">2</a></li>
                    <li><a href="#" class="w-10 h-10 flex items-center justify-center rounded-full glass text-slate-600 dark:text-slate-300 hover:bg-white dark:hover:bg-slate-800 hover:scale-110 transition-all duration-300 hover:text-blue-500">3</a></li>
                    <li><a href="#" class="w-10 h-10 flex items-center justify-center rounded-full glass text-slate-500 hover:text-blue-600 dark:hover:text-white hover:scale-110 transition-all duration-300 shadow-sm hover:shadow-blue-500/20"><i class="fas fa-chevron-right"></i></a></li>
                </ul>
            </nav>
        </div>

    </div>
</div>