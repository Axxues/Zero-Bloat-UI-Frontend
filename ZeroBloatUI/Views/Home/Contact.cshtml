@{
    ViewData["Title"] = "Support";
}

<section class="text-center mb-16 animate-fade-in-up">
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 text-xs font-bold uppercase tracking-wider mb-6">
        <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span> We're Online
    </div>
    <h1 class="text-4xl md:text-6xl font-extrabold mb-6">Get in <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Touch</span></h1>
    <p class="text-slate-500 dark:text-slate-400 max-w-2xl mx-auto text-lg">
        Have a question about a template? Need help with integration? Our team is ready to help you ship faster.
    </p>
</section>

<div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">

    <div class="space-y-6 animate-fade-in-up" style="animation-delay: 100ms;">

        <div class="glass p-6 rounded-3xl hover:border-blue-500/50 transition-colors group">
            <div class="w-12 h-12 rounded-2xl bg-blue-100 dark:bg-blue-900/30 text-blue-600 flex items-center justify-center text-xl mb-4 group-hover:scale-110 transition-transform">
                <i class="fas fa-envelope"></i>
            </div>
            <h3 class="font-bold text-xl mb-2">Email Support</h3>
            <p class="text-slate-500 text-sm mb-4">For general inquiries and license questions.</p>
            <a href="mailto:support@zerobloatui.com" class="text-blue-600 dark:text-blue-400 font-bold hover:underline flex items-center gap-2">
                support@zerobloatui.com <i class="fas fa-arrow-right text-xs"></i>
            </a>
        </div>

        <div class="glass p-6 rounded-3xl hover:border-purple-500/50 transition-colors group">
            <div class="w-12 h-12 rounded-2xl bg-purple-100 dark:bg-purple-900/30 text-purple-600 flex items-center justify-center text-xl mb-4 group-hover:scale-110 transition-transform">
                <i class="fas fa-code"></i>
            </div>
            <h3 class="font-bold text-xl mb-2">Technical Issues</h3>
            <p class="text-slate-500 text-sm mb-4">Found a bug? Let us know and we'll fix it.</p>
            <div class="flex items-center gap-2 text-xs font-bold text-slate-400 uppercase tracking-widest">
                <span class="w-2 h-2 rounded-full bg-emerald-500"></span> Avg. Response: 24h
            </div>
        </div>

        <div class="p-6 rounded-3xl border border-dashed border-slate-300 dark:border-slate-700 text-center">
            <p class="text-slate-500 mb-4">Before you ask, have you checked our docs?</p>
            <a href="how-it-works.html" class="inline-block px-6 py-2 bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 rounded-lg text-sm font-bold transition-colors">
                View Documentation
            </a>
        </div>
    </div>

    <div class="glass p-8 rounded-3xl shadow-2xl shadow-blue-900/5 border-t border-white/50 dark:border-white/10 animate-fade-in-up" style="animation-delay: 200ms;">
        <form id="contactForm" novalidate class="space-y-6">

            <div class="grid md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="text-xs font-bold text-slate-500 uppercase ml-1">Name</label>
                    <input type="text" id="name" placeholder="John Doe" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-xl px-4 py-3 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all placeholder:text-slate-400">
                    <p class="hidden text-xs text-red-500 font-bold ml-1 error-msg">Name is required</p>
                </div>
                <div class="space-y-2">
                    <label class="text-xs font-bold text-slate-500 uppercase ml-1">Email</label>
                    <input type="email" id="email" placeholder="john@example.com" class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-xl px-4 py-3 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all placeholder:text-slate-400">
                    <p class="hidden text-xs text-red-500 font-bold ml-1 error-msg">Please enter a valid email</p>
                </div>
            </div>

            <div class="space-y-2 relative">
                <label class="text-xs font-bold text-slate-500 uppercase ml-1">Subject</label>
                <input type="hidden" name="subject" id="subjectInput" value="Pre-Sale Question">
                <div id="subjectTrigger" class="custom-select-trigger w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-xl px-4 py-3 cursor-pointer flex justify-between items-center group hover:border-blue-500 transition-colors" aria-expanded="false">
                    <div class="flex items-center gap-3">
                        <span id="subjectIcon" class="w-6 h-6 rounded-md bg-blue-100 dark:bg-blue-900/30 text-blue-600 flex items-center justify-center text-xs"><i class="fas fa-comments"></i></span>
                        <span id="subjectText" class="text-slate-600 dark:text-slate-300 font-medium">Pre-Sale Question</span>
                    </div>
                    <i class="fas fa-chevron-down text-slate-400 text-xs select-arrow group-hover:text-blue-500"></i>
                </div>

                <div id="subjectMenu" class="custom-select-menu absolute top-full left-0 w-full mt-2 glass rounded-xl shadow-2xl border border-slate-200 dark:border-slate-800 overflow-hidden z-20">
                    <div onclick="selectSubject('Pre-Sale Question', 'fa-comments', 'text-blue-600', 'bg-blue-100 dark:bg-blue-900/30')" class="p-3 flex items-center gap-3 hover:bg-slate-100 dark:hover:bg-slate-800 cursor-pointer transition-colors border-b border-slate-100 dark:border-slate-800/50">
                        <div class="w-8 h-8 rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-600 flex items-center justify-center"><i class="fas fa-comments"></i></div>
                        <div><p class="font-bold text-sm text-slate-700 dark:text-slate-200">Pre-Sale Question</p><p class="text-xs text-slate-500">Questions before buying</p></div>
                    </div>
                    <div onclick="selectSubject('Technical Support', 'fa-tools', 'text-purple-600', 'bg-purple-100 dark:bg-purple-900/30')" class="p-3 flex items-center gap-3 hover:bg-slate-100 dark:hover:bg-slate-800 cursor-pointer transition-colors border-b border-slate-100 dark:border-slate-800/50">
                        <div class="w-8 h-8 rounded-lg bg-purple-100 dark:bg-purple-900/30 text-purple-600 flex items-center justify-center"><i class="fas fa-tools"></i></div>
                        <div><p class="font-bold text-sm text-slate-700 dark:text-slate-200">Technical Support</p><p class="text-xs text-slate-500">Issues with code or files</p></div>
                    </div>
                    <div onclick="selectSubject('Billing Issue', 'fa-file-invoice-dollar', 'text-emerald-600', 'bg-emerald-100 dark:bg-emerald-900/30')" class="p-3 flex items-center gap-3 hover:bg-slate-100 dark:hover:bg-slate-800 cursor-pointer transition-colors border-b border-slate-100 dark:border-slate-800/50">
                        <div class="w-8 h-8 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 flex items-center justify-center"><i class="fas fa-file-invoice-dollar"></i></div>
                        <div><p class="font-bold text-sm text-slate-700 dark:text-slate-200">Billing Issue</p><p class="text-xs text-slate-500">Refunds or invoices</p></div>
                    </div>
                    <div onclick="selectSubject('Feature Request', 'fa-lightbulb', 'text-yellow-600', 'bg-yellow-100 dark:bg-yellow-900/30')" class="p-3 flex items-center gap-3 hover:bg-slate-100 dark:hover:bg-slate-800 cursor-pointer transition-colors">
                        <div class="w-8 h-8 rounded-lg bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 flex items-center justify-center"><i class="fas fa-lightbulb"></i></div>
                        <div><p class="font-bold text-sm text-slate-700 dark:text-slate-200">Feature Request</p><p class="text-xs text-slate-500">Ideas for new templates</p></div>
                    </div>
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-xs font-bold text-slate-500 uppercase ml-1">Message</label>
                <textarea id="message" rows="5" placeholder="Describe your issue..." class="w-full bg-slate-50 dark:bg-slate-900/50 border border-slate-200 dark:border-slate-700 rounded-xl px-4 py-3 focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all placeholder:text-slate-400 resize-none"></textarea>
                <p class="hidden text-xs text-red-500 font-bold ml-1 error-msg">Please describe your issue</p>
            </div>

            <button type="submit" id="submitBtn" class="w-full py-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl shadow-lg shadow-blue-500/30 transform active:scale-95 transition-all flex items-center justify-center gap-2 group">
                <span>Send Message</span>
                <i class="fas fa-paper-plane group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"></i>
            </button>

            <p class="text-center text-xs text-slate-400">
                By sending this message, you agree to our <a href="#" class="underline hover:text-blue-500">Privacy Policy</a>.
            </p>
        </form>
    </div>
</div>