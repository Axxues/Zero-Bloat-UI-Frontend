<!DOCTYPE html>
<html lang="en" class="dark scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zero Bloat UI | Premium Web Templates</title>

    <link href="~/assets/css/fonts.css" rel="stylesheet">
    <link href="~/assets/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/assets/css/style.css">
</head>
<body class="bg-slate-50 text-slate-900 dark:bg-slate-950 dark:text-slate-100 transition-colors duration-500 min-h-screen flex flex-col relative overflow-x-hidden">

    <div class="fixed inset-0 pointer-events-none z-0 bg-grid"></div>

    <nav class="fixed w-full z-50 glass-nav transition-all duration-300">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">

            <a asp-controller="Home" asp-action="Home" class="text-2xl font-extrabold tracking-tighter flex items-center gap-2 group">
                <img src="https://placehold.co/100x100/2563eb/ffffff?text=Z" alt="Logo" class="w-8 h-8 rounded-lg group-hover:rotate-12 transition-transform duration-500 shadow-lg shadow-blue-500/20">
                <div>Zero<span class="text-blue-600 dark:text-blue-400">Bloat</span>UI</div>
            </a>

            <div class="hidden lg:flex items-center space-x-8 text-sm font-semibold">
                @{
                    if (ViewData["Title"] == "Home")
                    {
                        <a asp-controller="Home" asp-action="Index" class="relative group py-1">
                            <span class="text-blue-600 dark:text-blue-400 font-bold transition-colors duration-300">Home</span>
                            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300"></span>
                        </a>
                    } else
                    {
                        <a asp-controller="Home" asp-action="Index" class="relative group py-1">
                            <span class="group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">Home</span>
                            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    }

                    if (ViewData["Title"] == "Templates")
                    {
                        <a asp-controller="Project" asp-action="Index" class="relative group py-1">
                            <span class="text-blue-600 dark:text-blue-400 font-bold transition-colors duration-300">Templates</span>
                            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300"></span>
                        </a>
                    } else
                    {
                        <a asp-controller="Project" asp-action="Index" class="relative group py-1">
                            <span class="group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">Templates</span>
                            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    }

                    if (ViewData["Title"] == "Documentation")
                    {
                        <a asp-controller="Home" asp-action="HowItWorks" class="relative group py-1">
                            <span class="text-blue-600 dark:text-blue-400 font-bold transition-colors duration-300">Documentation</span>
                            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300"></span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="HowItWorks" class="relative group py-1">
                            <span class="group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">Documentation</span>
                            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    }

                    if (ViewData["Title"] == "Support")
                    {
                        <a asp-controller="Home" asp-action="Contact" class="relative group py-1">
                            <span class="text-blue-600 dark:text-blue-400 font-bold transition-colors duration-300">Support</span>
                            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300"></span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Contact" class="relative group py-1">
                            <span class="group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">Support</span>
                            <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 dark:bg-blue-400 transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    }
                }
            </div>

            <div class="hidden lg:flex items-center gap-4">
                <button onclick="toggleTheme()" class="w-9 h-9 rounded-full bg-slate-200 dark:bg-slate-800 flex items-center justify-center transition hover:scale-110">
                    <i class="fas fa-moon dark:hidden"></i><i class="fas fa-sun hidden dark:block"></i>
                </button>
                <a asp-controller="Project" asp-action="Index" class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white text-sm font-bold rounded-full transition shadow-lg shadow-blue-500/30 hover:-translate-y-0.5">Browse Shop</a>
            </div>

            <button class="lg:hidden text-2xl text-slate-700 dark:text-slate-200 focus:outline-none" onclick="toggleMobileMenu()">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div id="mobile-menu" class="hidden absolute top-full left-0 w-full glass-nav border-t border-slate-200 dark:border-slate-800 p-6 flex flex-col gap-2 shadow-2xl z-50 animate-fade-in-up origin-top">
            @{
                if (ViewData["Title"] == "Home")
                {
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-4 p-3 rounded-xl bg-blue-50 dark:bg-blue-900/20 border border-blue-500/30 transition-colors group shadow-sm">
                        <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/50 text-blue-600 dark:text-blue-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                            <i class="fas fa-home"></i>
                        </div>
                        <span class="font-bold text-blue-700 dark:text-blue-400">Home</span>
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Index" class="flex items-center gap-4 p-3 rounded-xl hover:bg-slate-100 dark:hover:bg-slate-800/50 transition-colors group">
                        <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-600 flex items-center justify-center group-hover:scale-110 transition-transform"><i class="fas fa-home"></i></div>
                        <span class="font-bold text-slate-700 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400">Home</span>
                    </a>
                }

                if (ViewData["Title"] == "Templates")
                {
                    <a asp-controller="Project" asp-action="Index" class="flex items-center gap-4 p-3 rounded-xl bg-purple-50 dark:bg-purple-900/20 border border-purple-500/30 transition-colors group shadow-sm">
                        <div class="w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/50 text-purple-600 dark:text-purple-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                            <i class="fas fa-layer-group"></i>
                        </div>
                        <span class="font-bold text-purple-700 dark:text-purple-400">Templates</span>
                    </a>
                }
                else
                {
                    <a asp-controller="Project" asp-action="Index" class="flex items-center gap-4 p-3 rounded-xl hover:bg-slate-100 dark:hover:bg-slate-800/50 transition-colors group">
                        <div class="w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/30 text-purple-600 flex items-center justify-center group-hover:scale-110 transition-transform"><i class="fas fa-layer-group"></i></div>
                        <span class="font-bold text-slate-700 dark:text-slate-200 group-hover:text-purple-600 dark:group-hover:text-purple-400">Templates</span>
                    </a>
                }

                if (ViewData["Title"] == "Documentation")
                {
                    <a asp-controller="Home" asp-action="HowItWorks" class="flex items-center gap-4 p-3 rounded-xl bg-emerald-50 dark:bg-emerald-900/20 border border-emerald-500/30 transition-colors group shadow-sm">
                        <div class="w-10 h-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/50 text-emerald-600 dark:text-emerald-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                            <i class="fas fa-book"></i>
                        </div>
                        <span class="font-bold text-emerald-700 dark:text-emerald-400">Documentation</span>
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="HowItWorks" class="flex items-center gap-4 p-3 rounded-xl hover:bg-slate-100 dark:hover:bg-slate-800/50 transition-colors group">
                        <div class="w-10 h-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30 text-emerald-600 flex items-center justify-center group-hover:scale-110 transition-transform"><i class="fas fa-book"></i></div>
                        <span class="font-bold text-slate-700 dark:text-slate-200 group-hover:text-emerald-600 dark:group-hover:text-emerald-400">Documentation</span>
                    </a>
                }

                if (ViewData["Title"] == "Support")
                {
                    <a asp-controller="Home" asp-action="Contact" class="flex items-center gap-4 p-3 rounded-xl bg-orange-50 dark:bg-orange-900/20 border border-orange-500/30 transition-colors group shadow-sm">
                        <div class="w-10 h-10 rounded-lg bg-orange-100 dark:bg-orange-900/50 text-orange-600 dark:text-orange-400 flex items-center justify-center group-hover:scale-110 transition-transform">
                            <i class="fas fa-headset"></i>
                        </div>
                        <span class="font-bold text-orange-700 dark:text-orange-400">Support</span>
                    </a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="Contact" class="flex items-center gap-4 p-3 rounded-xl hover:bg-slate-100 dark:hover:bg-slate-800/50 transition-colors group">
                        <div class="w-10 h-10 rounded-lg bg-orange-100 dark:bg-orange-900/30 text-orange-600 flex items-center justify-center group-hover:scale-110 transition-transform"><i class="fas fa-headset"></i></div>
                        <span class="font-bold text-slate-700 dark:text-slate-200 group-hover:text-orange-600 dark:group-hover:text-orange-400">Support</span>
                    </a>
                }
            }
            <div class="h-px bg-slate-200 dark:bg-slate-800 my-2"></div>

            <div>
                <p class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-3 pl-1">Appearance</p>
                <div class="grid grid-cols-2 gap-3">
                    <button id="mobile-light-btn" onclick="setTheme('light')" class="flex items-center justify-center gap-2 p-3 rounded-xl border border-slate-200 dark:border-slate-700 hover:border-blue-500 transition-all bg-white dark:bg-slate-900 text-slate-500 hover:text-blue-500 font-bold text-sm">
                        <i class="fas fa-sun text-yellow-500"></i> Light
                    </button>
                    <button id="mobile-dark-btn" onclick="setTheme('dark')" class="flex items-center justify-center gap-2 p-3 rounded-xl border border-slate-200 dark:border-slate-700 hover:border-blue-500 transition-all bg-white dark:bg-slate-900 text-slate-500 hover:text-blue-500 font-bold text-sm">
                        <i class="fas fa-moon text-blue-500"></i> Dark
                    </button>
                </div>
            </div>

            <a asp-controller="Project" asp-action="Index" class="mt-2 w-full py-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl shadow-lg shadow-blue-500/30 text-center transition-all active:scale-95">
                Browse Shop
            </a>
        </div>
    </nav>

    <main class="flex-grow pt-24 md:pt-32 relative z-10 container mx-auto px-6 py-12">
        @RenderBody()
    </main>

    <footer class="mt-20 border-t border-slate-200 dark:border-slate-800 bg-white/30 dark:bg-slate-900/30 backdrop-blur-md relative z-10 animate-fade-in-up" style="animation-delay: 500ms;">
        <div class="container mx-auto px-6 py-12">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
                <div class="space-y-4">
                    <a asp-controller="Home" asp-action="Index" class="text-2xl font-extrabold tracking-tighter flex items-center gap-2 group">
                        <img src="https://placehold.co/100x100/2563eb/ffffff?text=Z" alt="Logo" class="w-8 h-8 rounded-lg group-hover:rotate-12 transition-transform duration-500 shadow-lg shadow-blue-500/20">
                        <div>Zero<span class="text-blue-600 dark:text-blue-400">Bloat</span>UI</div>
                    </a>
                    <p class="text-sm text-slate-500 leading-relaxed">
                        Premium Tailwind and Bootstrap CSS templates for modern startups. Save hundreds of hours on UI development.
                    </p>
                    <div class="flex gap-4">
                        <a href="#" class="text-slate-400 hover:text-blue-600 transition-all duration-300 hover:-translate-y-1"><i class="fab fa-twitter text-lg"></i></a>
                        <a href="#" class="text-slate-400 hover:text-slate-900 dark:hover:text-white transition-all duration-300 hover:-translate-y-1"><i class="fab fa-github text-lg"></i></a>
                        <a href="#" class="text-slate-400 hover:text-blue-500 transition-all duration-300 hover:-translate-y-1"><i class="fab fa-discord text-lg"></i></a>
                    </div>
                </div>

                <div>
                    <h4 class="font-bold text-slate-900 dark:text-white mb-6">Products</h4>
                    <ul class="space-y-3 text-sm text-slate-600 dark:text-slate-400">
                        <li><a asp-controller="Project" asp-action="Index" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">All Templates</a></li>
                        <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">Free Kits</a></li>
                        <li><a href="#" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">Figma Assets</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-bold text-slate-900 dark:text-white mb-6">Support</h4>
                    <ul class="space-y-3 text-sm text-slate-600 dark:text-slate-400">
                        <li><a asp-controller="Home" asp-action="Contact" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">Help Center</a></li>
                        <li><a asp-controller="Home" asp-action="HowItWorks" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">Documentation</a></li>
                        <li><a asp-controller="Home" asp-action="License" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">License Terms</a></li>
                    </ul>
                </div>

                <div>
                    <h4 class="font-bold text-slate-900 dark:text-white mb-6">Legal</h4>
                    <ul class="space-y-3 text-sm text-slate-600 dark:text-slate-400">
                        <li><a asp-controller="Home" asp-action="Privacy" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">Privacy Policy</a></li>
                        <li><a asp-controller="Home" asp-action="Terms" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">Terms of Service</a></li>
                        <li><a asp-controller="Home" asp-action="Refund" class="hover:text-blue-600 dark:hover:text-blue-400 transition-all hover:translate-x-1 inline-block duration-200">Refund Policy</a></li>
                    </ul>
                </div>
            </div>

            <div class="pt-8 border-t border-slate-200 dark:border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4">
                <div class="text-xs text-slate-500 text-center md:text-left flex items-center gap-1">
                    &copy; 2026 Zero Bloat UI. Designed in Manila.
                </div>
                <div class="flex gap-4 opacity-70 grayscale hover:grayscale-0 transition-all duration-500">
                    <i class="fab fa-cc-visa text-2xl text-slate-600 dark:text-slate-300"></i>
                    <i class="fab fa-cc-mastercard text-2xl text-slate-600 dark:text-slate-300"></i>
                    <i class="fab fa-paypal text-2xl text-blue-500"></i>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
